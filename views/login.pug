extends template/default_template.pug

block config
	- var page_title = "Login";

block main_content
	div.row.vertical-offset-100
		div.col-md-4.col-md-offset-4
			div.panel.panel-default
				div.panel-heading.text-center
					h3.panel-title BlueTrack Login
				div.panel-body
					form(accept-charset="UTF-8", role="form", method="post", action="")
						fieldset
							div(class=(FormErrors.username ? 'form-group has-error' : 'form-group'))
								input.form-control(placeholder="Username", name="username", type="text", value=OldFormValue.username, required, autofocus)
								if FormErrors.username
									span.help-block
										strong=FormErrors.username
							div(class=(FormErrors.password ? 'form-group has-error' : 'form-group'))
								input.form-control(placeholder="Password", name="password", type="password", value="", required, autofocus)
								if FormErrors.password
									span.help-block
										strong=FormErrors.password
							input.btn.btn-lg.btn-success.btn-block(type="submit", value="Login")